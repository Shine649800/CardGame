mixin deckForm(deck, buttonText, saveUrl, cancelUrl, deleteUrl)
    form(action=saveUrl method="post")
        div.input-container.wide
            label(for="deck_name").form-label Deck Name
            input(type="text" name="deck_name" id="deck_name" required=true value=deck.deck_name)
        a.button(href=cancelUrl) Cancel
            if(deleteUrl)
                a.button(href=deleteUrl) Delete
        button.button.primary(type="submit") #{buttonText}